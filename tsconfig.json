{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "outDir": "./dist",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@": ["."],
      "~/*": ["./src/*"],
      "test/*": ["test/*"]
    }
  },
  "include": ["./index.ts", "./src/**/*", "./test/**/*"]
}
